---
import i18next, { t } from "i18next";
import { ViewTransitions } from 'astro:transitions'; // Импортируем View Transitions
---

<html lang={i18next.language}>
  <head>
    <ViewTransitions /> <!-- Добавляем поддержку плавных переходов -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{t('Новые Технологии')}</title>
  </head>

  <body>
    <slot />
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: Arial, sans-serif;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  /* Анимация для плавных переходов между страницами */
  ::view-transition-old(root),
  ::view-transition-new(root) {
    animation-duration: 0.3s;
    animation-timing-function: ease-in-out;
  }

  /* Дополнительно: убираем мерцание в Safari */
  @media (prefers-reduced-motion: no-preference) {
    html {
      view-transition-name: none;
    }
  }
</style>